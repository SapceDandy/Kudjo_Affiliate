{
  "name": "kudjo-affiliate-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "functions",
    "packages/*",
    "scripts"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:functions": "npm --workspace functions run dev",
    "build": "npm run build:web && npm run build:functions",
    "build:web": "npm --workspace apps/web run build",
    "build:functions": "npm --workspace functions run build",
    "lint": "eslint .",
    "typecheck": "npm --workspace packages/shared run typecheck && npm --workspace functions run typecheck && npm --workspace apps/web run typecheck",
    "test": "firebase emulators:exec --only firestore,auth --no-ui \"jest --coverage\"",
    "test:unit": "jest tests/unit",
    "test:integration": "firebase emulators:exec --only firestore,auth --no-ui \"jest tests/integration\"",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:emu": "cross-env FIREBASE_EMULATOR_HUB=localhost:4400 jest --config functions/jest.emu.config.ts",
    "seed": "ts-node scripts/seed.ts",
    "seed:test": "ts-node scripts/seed-test.ts",
    "seed:production": "./scripts/run-seed.sh",
    "seed:simple": "ts-node scripts/seed-production.ts",
    "deploy": "./deployment/deploy.sh",
    "deploy:vercel": "vercel --prod",
    "deploy:firebase": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,firestore:indexes"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "eslint-config-next": "^14.2.6",
    "jest": "^29.7.0",
    "msw": "^2.11.1",
    "playwright": "^1.55.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "squareup": "^1.0.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  }
}
